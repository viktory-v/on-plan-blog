@import "../global-mixins.pcss";

.section-tabs {
  .title-holder {
    position: relative;
    text-align: center;

    &::before {
      position: absolute;
      content: "";
      width: 100%;
      height: 1px;
      top: 50%;
      left: 0;
      background:
        linear-gradient(
          to right,
          #268ddf,
          #fff 45%,
          #fff 55%,
          #268ddf
        );
    }
  }

  .inner {
    max-width: 1170px;
  }

  .title {
    font-family: Poppins;
    font-style: italic;
    font-weight: 600;
    font-size: 28px;
    line-height: 42px;
    text-align: center;
    color: #268ddf;
    display: inline-block;
    margin: 0;
    position: relative;
  }

  .tabs-nav {
    list-style: none;
    display: flex;
    justify-content: center;
    margin-top: 23px;
    margin-bottom: 50px;
    padding-left: 0;

    li {
      margin-left: 5px;
      margin-right: 5px;
      font-family: Poppins;
      font-style: normal;
      font-weight: 300;
      font-size: 16px;
      line-height: 24px;
      text-align: center;
      color: #000;
      background: #ebf6ff;
      border-radius: 30px;
      padding: 18px 30px;

      &:nth-child(1) {
        padding-left: 32px;
        padding-right: 31px;
      }

      &:nth-child(2) {
        padding-left: 34px;
        padding-right: 33px;
      }

      &:nth-child(3) {
        padding-left: 28px;
        padding-right: 28px;
      }

      &:nth-child(4) {
        padding-left: 27px;
        padding-right: 27px;
      }

      &:nth-child(5) {
        padding-left: 24px;
        padding-right: 24px;
      }
    }
  }

  .text {
    .title-post {
      font-family: Poppins;
      font-style: normal;
      font-weight: bold;
      font-size: 36px;
      line-height: 54px;
      color: #000;
      margin-bottom: 21px;
    }
  }

  .section-access-form {
    padding-top: 55px;

    .inner {
      padding-bottom: 89px;
    }

    ul {
      padding-bottom: 42px;
      border: none;
    }

    .access-form {
      background-color: #fff;
      padding: 0;

      .gform_wrapper input:not([type="radio"]):not([type="checkbox"]):not([type="submit"]):not([type="button"]):not([type="image"]):not([type="file"]) {
        border: 1px solid #bcbcbc;
        width: 270px;
      }

      .gform_fields .gfield {
        margin-bottom: 38px;

        .gfield_label {
          font-family: Poppins;
          font-style: italic;
          font-weight: 500;
          font-size: 18px;
          line-height: 27px;
          color: #268ddf;
          margin-bottom: 9px;
          display: block;
        }
      }

      .gform_footer {
        &.top_label {
          margin-top: -70px;
        }

        input[type="submit"] {
          width: 100%;
        }
      }
    }

    .links-wrapper {
      margin-top: 24px;
      justify-content: center;
      margin-left: 25px;

      .col-social-links {
        max-width: 180px;

        a {
          width: 50px;
          height: 50px;
        }
      }
    }
  }

  @media (max-width: 1300px) {
    .inner {
      padding-left: 0;
      padding-right: 0;
    }
  }

  @media (max-width: 1200px) {
    .inner {
      padding-left: 35px;
      padding-right: 35px;
    }

    .tabs-nav {
      margin-bottom: 34px;
    }

    .section-access-form {
      padding-top: 10px;

      ul {
        flex-direction: column;
      }

      .links-wrapper {
        margin-bottom: 50px;
      }

      .access-form {
        max-width: 500px;
        margin: 0 auto;

        .gform_wrapper {
          input:not([type="radio"]):not([type="checkbox"]):not([type="submit"]):not([type="button"]):not([type="image"]):not([type="file"]) {
            width: 100%;
          }
        }

        .gform_footer.top_label {
          margin-top: -50px;
        }
      }
    }
  }

  @media (max-width: 910px) {
    .inner {
      padding-left: 20px;
      padding-right: 20px;
    }

    .tabs-nav {
      flex-wrap: wrap;
      margin-bottom: 14px;

      li {
        margin-bottom: 20px;
      }
    }
  }

  @media (max-width: 640px) {
    padding-top: 30px;

    .inner {
      padding-left: 17px;
      padding-right: 17px;
    }

    .tabs-nav {
      margin-top: 26px;

      li {
        margin-bottom: 15px;
      }
    }

    .text {
      .title-post {
        font-size: 24px;
        line-height: 36px;
      }
    }

    .section-access-form .access-form {
      max-width: 100%;
      margin: 0;
    }
  }

  @media (max-width: 530px) {
    .inner {
      padding-left: 15px;
      padding-right: 15px;
    }

    .tabs-nav {
      justify-content: space-around;

      li {
        font-size: 16px;
        line-height: 24px;
        margin-left: 0;
        margin-right: 0;

        &:nth-child(3) {
          padding-left: 21px;
          padding-right: 21px;
        }

        &:nth-child(4) {
          padding-left: 17px;
          padding-right: 17px;
        }
      }
    }

    .section-post {
      .inner {
        padding-left: 0;
        padding-right: 0;
      }
    }

    .section-access-form {
      .inner {
        padding-left: 0;
        padding-right: 0;

        .links-wrapper {
          margin-left: 0;
        }

        .access-form .gform_wrapper input:not([type="radio"]):not([type="checkbox"]):not([type="submit"]):not([type="button"]):not([type="image"]):not([type="file"]) {
          padding: 14px 30px;
        }
      }
    }
  }
}
