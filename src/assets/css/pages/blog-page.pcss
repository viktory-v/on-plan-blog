  @media (max-width: 1300px) {
    .inner {
      padding-left: 0;
      padding-right: 0;
    }
  }

  @media (max-width: 1200px) {
    .inner {
      padding-left: 70px;
      padding-right: 70px;
    }

    .section-access-form {
      padding-top: 10px;

      ul {
        flex-direction: column;
      }

      .links-wrapper {
        margin-bottom: 50px;
      }

      .access-form {
        max-width: 500px;
        margin: 0 auto;

        .gform_wrapper {
          input:not([type='radio']):not([type='checkbox']):not([type='submit']):not([type='button']):not([type='image']):not([type='file']) {
            width: 100%;
          }
        }

        .gform_footer.top_label {
          margin-top: -50px;
        }
      }
    }

    .cols {
      flex-direction: column-reverse;
    }

    .col {
      &:first-child {
        max-width: none;
      }

      &:last-child {
        margin-bottom: 29px;
      }
    }

    .list {
      margin-left: 7px;
      margin-right: 7px;
    }

    .access {
      margin-left: 0;

      .text {
        .btn {
          padding: 18px 25px 18px 22px;
        }

        h2 {
          margin-bottom: 25px;
        }
      }
    }
  }

  @media (max-width: 970px) {
    .inner {
      padding-left: 40px;
      padding-right: 40px;
      padding-bottom: 36px;
    }

    .list {
      flex-wrap: wrap;
      margin-left: -29px;
      justify-content: space-around;
      margin-right: -29px;

      .content {
        padding: 31px 21px 39px 22px;
      }

      li {
        margin-bottom: 30px;
      }

      li:not(:first-child) {
        max-width: 314px;
        margin-bottom: 30px;
      }

      li:first-child {
        max-width: 688px;
        align-items: start;
        margin-left: 0;
        padding: 40px 40px 48px;

        .img img {
          max-width: 274px;
          height: 289px;
          object-fit: cover;
        }

        .content {
          margin-top: 0;
          margin-left: 51px;
          padding: 0;
        }

        .text {
          h2 {
            margin-bottom: 22px;
          }

          p {
            margin-bottom: 39px;
            padding-right: 0;
          }
        }
      }

      .img img {
        height: 258px;
        object-fit: cover;
        width: 100%;
      }

      .text p {
        margin-bottom: 41px;
      }
    }
  }

  @media (max-width: 700px) {
    padding-top: 30px;

    .inner {
      padding: 0 35px 15px;
    }

    .title {
      font-size: 34px;
      line-height: 51px;
      margin-bottom: 30px;
    }

    .list {
      margin-left: 0;
      margin-right: 0;
      justify-content: space-between;

      .text {
        p {
          margin-bottom: 19px;
        }
      }

      .content {
        padding: 31px 21px 36px 22px;
      }

      li {
        &:not(:first-child) {
          max-width: 270px;
        }

        &:first-child {
          flex-direction: column;
          max-width: 270px;
          padding: 0;

          .img img {
            height: 258px;
            object-fit: fill;
            width: 270px;
            border-radius: 20px 20px 0 0;
          }

          .content {
            margin-left: 0;
            padding: 31px 21px 38px 22px;
          }

          .text {
            .data {
              font-size: 14px;
              line-height: 18px;
            }

            h2 {
              font-size: 16px;
              line-height: 26px;
              font-weight: 600;
              margin-bottom: 7px;
            }

            p {
              font-size: 14px;
              line-height: 24px;
              margin-bottom: 19px;
              padding-right: 7px;
            }

            .link {
              font-size: 16px;
              line-height: 24px;

              &::after {
                width: 10px;
                height: 10px;
                background-image: url(../../images/small-arrow-green.svg);
                margin-left: 10px;
              }
            }
          }
        }
      }
    }
  }

  @media (max-width: 640px) {
    .section-access-form .access-form {
      max-width: 100%;
      margin: 0;
    }
  }

  @media (max-width: 620px) {
    .inner {
      padding-left: 15px;
      padding-right: 15px;
    }

    .list {
      justify-content: center;

      .text {
        p {
          margin-bottom: 44px;
        }
      }

      li {
        margin-right: 5px;
        margin-left: 5px;

        &:not(:first-child) {
          max-width: 314px;
        }

        &:first-child {
          max-width: 314px;

          .img {
            width: 314px;

            img {
              object-fit: cover;
              max-width: 314px;
              width: 100%;
            }
          }

          .text {
            .data {
              margin-bottom: 13px;
            }

            p {
              margin-bottom: 42px;
            }
          }
        }
      }
    }

    .access {
      margin: 0 auto;

      .text {
        max-width: 212px;
        margin: 0 auto;

        h2 {
          margin-bottom: 22px;
        }
      }
    }
  }
}
