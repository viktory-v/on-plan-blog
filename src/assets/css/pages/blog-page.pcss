@import '../global-mixins.pcss';

.section-blog-page {
  .inner {
    max-width: 1170px;
    padding-top: 10px;
    padding-bottom: 39px;
  }

  .title {
    font-family: Poppins;
    font-style: normal;
    font-weight: bold;
    font-size: 50px;
    line-height: 75px;
    color: #000;
    text-align: center;
    margin-bottom: 60px;
  }

  .cols {
    display: flex;
  }

  .col {
    &:first-child {
      max-width: 870px;
    }
  }

  .list {
    display: flex;
    list-style: none;
    justify-content: space-between;
    flex-wrap: wrap;
    padding-left: 0;
    margin-top: 0;

    li {
      border-radius: 20px;
      box-shadow: 0 0 30px rgba(14, 44, 55, 0.1);
      margin-bottom: 27px;

      &:not(:first-child) {
        max-width: 270px;
        flex-grow: 1;
      }

      a {
        text-decoration: none;
      }

      &:first-child {
        display: flex;
        border-radius: 20px;
        padding: 42px 32px 53px 50px;
        align-items: center;
        flex-grow: 3;

        .content {
          margin-top: 27px;
          padding: 33px 20px 37px 25px;
        }

        .img img {
          width: 380px;
          max-width: none;
          border-radius: 20px;
        }

        .text {
          .data {
            font-family: Poppins;
            font-style: italic;
            font-weight: normal;
            font-size: 14px;
            line-height: 18px;
            color: #20a4f3;
            margin-bottom: 11px;
          }

          h2 {
            font-family: Poppins;
            font-style: normal;
            font-weight: bold;
            font-size: 24px;
            line-height: 34px;
            color: #000;
            margin-bottom: 14px;
          }

          p {
            font-family: Poppins;
            font-style: normal;
            font-weight: 300;
            font-size: 16px;
            line-height: 26px;
            color: #000;
            margin-bottom: 30px;
          }

          .link {
            font-family: Poppins;
            font-style: normal;
            font-weight: normal;
            font-size: 16px;
            line-height: 24px;
            text-decoration-line: underline;
            color: #00b159;
            position: relative;
            display: flex;
            align-items: center;

            &::after {
              content: '';
              background-image: url(../../images/section-blog-page-link-arrow.svg);
              background-repeat: no-repeat;
              width: 30px;
              height: 8px;
              margin-left: 10px;
            }

            &:hover {
              text-decoration: none;
            }
          }
        }
      }
    }

    .img {
      img {
        border-radius: 20px 20px 0 0;
      }
    }

    .content {
      padding: 31px 21px 37px 22px;
    }

    .text {
      .data {
        font-family: Poppins;
        font-style: italic;
        font-weight: normal;
        font-size: 14px;
        line-height: 18px;
        color: #20a4f3;
        margin-bottom: 12px;
      }

      h3 {
        font-family: Poppins;
        font-style: normal;
        font-weight: 600;
        font-size: 16px;
        line-height: 26px;
        color: #000;
        margin-bottom: 7px;
      }

      p {
        font-family: Poppins;
        font-style: normal;
        font-weight: 300;
        font-size: 14px;
        line-height: 24px;
        color: #000;
        margin-bottom: 19px;
        padding-right: 7px;
      }

      .link {
        font-family: Poppins;
        font-style: normal;
        font-weight: normal;
        font-size: 16px;
        line-height: 24px;
        text-decoration-line: underline;
        color: #00b159;
        position: relative;
        display: flex;
        align-items: center;

        &::after {
          content: '';
          width: 10px;
          height: 10px;
          background-image: url(../../images/small-arrow-green.svg);
          background-repeat: no-repeat;
          margin-left: 10px;
        }

        &:hover {
          text-decoration: none;
        }
      }
    }
  }

  .section-access-form {
    padding-top: 0;

    .inner {
      padding-bottom: 89px;
    }

    ul {
      padding-bottom: 42px;
      border: none;
    }

    .access-form {
      background-color: #fff;
      padding: 0;

      .gform_wrapper {
        input:not([type='radio']):not([type='checkbox']):not([type='submit']):not([type='button']):not([type='image']):not([type='file']) {
          border: 1px solid #bcbcbc;
          width: 270px;
        }
      }

      .gform_fields .gfield {
        margin-bottom: 38px;

        .gfield_label {
          font-family: Poppins;
          font-style: italic;
          font-weight: 500;
          font-size: 18px;
          line-height: 27px;
          color: #268ddf;
          margin-bottom: 9px;
          display: block;
        }
      }

      .gform_footer {
        &.top_label {
          margin-top: -70px;
        }

        input[type='submit'] {
          width: 100%;
        }
      }
    }

    .links-wrapper {
      margin-top: 24px;
      justify-content: center;
      margin-left: 25px;

      .col-social-links {
        max-width: 180px;

        a {
          width: 50px;
          height: 50px;
        }
      }
    }
  }

