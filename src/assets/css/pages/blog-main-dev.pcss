@import '../global-mixins.pcss';

.section-blog-main {
  background-color: #f4f4f4;
  padding-top: 0;
  position: relative;
  overflow: hidden;

  .wrapper img {
    height: 100%;
    position: absolute;
    object-position: left;
    left: 50%;
    width: 50%;
    vertical-align: top;
  }

  .inner {
    max-width: 1170px;
    padding-top: 82px;
    padding-bottom: 21px;

    .col {
      width: 50%;
    }
  }

  .title {
    font-family: Poppins;
    font-style: normal;
    font-weight: bold;
    font-size: 40px;
    line-height: 60px;
    color: #000;
    margin-bottom: 9px;
  }

  .text {
    p {
      font-family: Poppins;
      font-style: normal;
      font-weight: 300;
      font-size: 18px;
      line-height: 30px;
      color: #000;
      margin-bottom: 40px;
    }
  }

  .form {
    max-width: 455px;

    .gform_wrapper {
      form {
        display: flex;
        justify-content: space-between;
      }

      input:not([type='radio']):not([type='checkbox']):not([type='submit']):not([type='button']):not([type='image']):not([type='file']) {
        width: 270px;
      }

      .gform_footer {
        margin-right: 15px;
        height: 60px;

        input[type='submit'] {
          padding: 18.5px 40px;
        }
      }
    }
  }

  @media (max-width: 1300px) {
    .inner {
      padding-left: 0;
      padding-right: 0;
    }
  }

  @media (max-width: 1200px) {
    .inner {
      padding-left: 70px;
      padding-right: 70px;

      .col {
        width: 100%;
      }
    }

    .wrapper img {
      position: initial;
      width: 100%;
      height: 399px;
      object-position: center;
    }
  }

  @media (max-width: 768px) {
    .inner {
      padding-left: 50px;
      padding-right: 50px;
    }

    .wrapper img {
      height: 299px;
    }
  }

  @media (max-width: 640px) {
    padding-bottom: 32px;

    .inner {
      padding: 50px 35px 0;
    }

    .wrapper img {
      height: 249px;
    }

    .form {
      max-width: none;

      .gform_wrapper {
        .gform_footer {
          margin-right: 0;
        }

        input:not([type='radio']):not([type='checkbox']):not([type='submit']):not([type='button']):not([type='image']):not([type='file']) {
          width: 400px;
        }
      }
    }
  }

  @media (max-width: 620px) {
    .form {
      .gform_wrapper {
        form {
          flex-wrap: wrap;
        }

        .gform_body {
          width: 100%;
        }

        input:not([type='radio']):not([type='checkbox']):not([type='submit']):not([type='button']):not([type='image']):not([type='file']) {
          width: 100%;
        }

        .gform_footer {
          width: 100%;

          input[type='submit'] {
            width: 100%;
          }
        }
      }
    }
  }

  @media (max-width: 400px) {
    padding-bottom: 50px;

    .inner {
      padding-left: 16px;
      padding-right: 16px;
    }

    .wrapper img {
      height: 140px;
    }

    .title {
      font-size: 24px;
      line-height: 36px;
    }

    .text {
      p {
        margin-bottom: 21px;
      }
    }

    .gform_fields .gfield {
      margin-bottom: 15px;
    }
  }
}

.tabs-main-blog {
  padding-top: 20px;

  .inner {
    padding-bottom: 66px;
  }

  .tabs-nav {
    margin-bottom: 53px;
  }

  .tab {
    display: flex;
  }

  .list {
    margin-bottom: 27px;

    li {
      margin-bottom: 28px;
    }
  }

  .form-blog {
    background-color: #fff;
  }

  .section-access-form {
    padding-top: 0;
  }

  @media (max-width: 1200px) {
    padding-top: 42px;

    .inner {
      padding-left: 70px;
      padding-right: 70px;
    }

    .tab {
      flex-direction: column-reverse;
    }
  }

  @media (max-width: 768px) {
    .inner {
      padding-left: 40px;
      padding-right: 40px;
    }

    .tabs-nav {
      margin-right: -6px;
      margin-left: -6px;
      margin-bottom: 30px;
    }

    .section-access-form .links-wrapper {
      margin-left: 0;
      margin-bottom: 22px;
    }
  }

  @media (max-width: 640px) {
    padding-top: 30px;

    .inner {
      padding-left: 21px;
      padding-right: 21px;
      padding-bottom: 44px;
    }

    .col:last-child {
      margin-right: 10px;
      margin-left: 10px;
    }

    .list {
      justify-content: space-around;
    }

    .page-numbers .prev,
    .page-numbers .next {
      display: none;
    }
  }

  @media (max-width: 400px) {
    padding-top: 51px;

    .inner {
      padding-left: 18px;
      padding-right: 18px;
    }

    .tabs-nav {
      margin-bottom: 35px;
    }

    .col:last-child {
      margin-left: 0;
      margin-right: 0;
      margin-bottom: 58px;
    }

    .section-access-form {
      .links-wrapper {
        margin-top: 44px;
      }

      .access-form {
        .gform_footer.top_label {
          margin-top: -77px;
        }

        .gform_wrapper {
          input:not([type='radio']):not([type='checkbox']):not([type='submit']):not([type='button']):not([type='image']):not([type='file']) {
            height: 60px;
          }
        }

        .gform_fields .gfield {
          margin-bottom: 55px;
        }
      }
    }

    .page-numbers {
      margin-top: 7px;
    }
  }
}
